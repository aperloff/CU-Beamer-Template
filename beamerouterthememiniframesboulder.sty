      \begin{beamercolorbox}[wd=0.24\paperwidth,ht=7.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil,right]{author in head/foot}%
        \usebeamerfont{title in head/foot}\vspace*{2ex}\insertshortdate{}\hspace*{2em}%
